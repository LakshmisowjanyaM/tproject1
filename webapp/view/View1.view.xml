<mvc:View
    controllerName="tproject1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content >
                    	<List
		headerText="Products"
		items="{path : 'oProductTable>/'}" >
		<StandardListItem
			title="{oProductTable>ProductName}"
			description="{oProductTable>ID}"/>
	</List>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
